<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="281dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:src="@drawable/appbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/diffGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/easyButton"
                    style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:lineSpacingExtra="20sp"
                    android:text="EasyMode"
                    android:textSize="34sp"
                    android:typeface="serif" />

                <RadioButton
                    android:id="@+id/mediumButton"
                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:checked="true"
                    android:lineSpacingExtra="20sp"
                    android:text="MediumMode"
                    android:textSize="34sp"
                    android:typeface="serif" />

                <RadioButton
                    android:id="@+id/hardButton"
                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:lineSpacingExtra="20sp"
                    android:text="HardMode"
                    android:textSize="34sp"
                    android:typeface="serif" />

            </RadioGroup>

            <Switch
                android:id="@+id/audioSwitch"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:text="Audio"
                android:textSize="30sp"
                android:typeface="sans" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>